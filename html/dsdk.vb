    <script>
        $(document).ready(function(){
            var i=1;
            $("myModal").modal();
        });
        function Kiemtraten(){
            var i=1;
            let mauKT=/([A-Z]{1}[a-z]+)((\s{1}{a-z}+){1,})$/;
            if($("#Name").val()==""){
                $("#txtName").html("không để trống");
                return false;
            }
            if(!mauKT.test($("#Name").val())){
                $("#txtName").html("mỗi ký tự đầu viết hoa không sử dụng số");
                return true;
        }
        $("#txtName").html("*");
        return true;
    }
    $("#Name").blur(Kiemtraten);
        
    function KiemtraSCMND(){
            let mauKT=/^0\d{3}-\d{3}$/;
            if($("#SCMND").val()==""){
                $("#txtSCMND").html("không để trống");
                return false;
            }
            if(!mauKT.test($("#SCMND").val())){
                $("#txtSCMND").html("nhập 9 hoặc 12 số");
                return true;
        }
        $("#txtSCMND").html("*");
        return true;
    }
    $("#SCMND").blur(KiemtraSCMND);

    function KiemtraEmail(){
            let mauKT=/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)+(\.\W{2,3})+$/;
            if($("#Email").val()==""){
                $("#txtEmail").html("bắt buộc nhập");
                return false;
            }
            if(!mauKT.test($("#Email").val())){
                $("#txtEmail").html("nhập đúng định dạng mail");
                return true;
        }
        $("#txtEmail").html("*");
        return true;
    }
    $("#Email").blur(KiemtraEmail);

    $("#Save").click(function(){
        $("#Save").click(function(){
            if(Kiemtraten()== true && KiemtraSCMND()== true &&KiemtraEmail== true){
                row="<tr>";
                row+="<th>" + (i++) + "</th>";
                row+="<th>" + $("#Name").val() + "</th>";
                row+="<th>" + $("#SCMND").val() + "</th>";
                row+="<th>" + $("#Email").val() + "</th>";
                $("#danhsach").append(row);
                $("myModal").modal("hide");
            }
        })
    })
    </script>
